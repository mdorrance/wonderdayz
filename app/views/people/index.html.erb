<h1>Listing people</h1>

<table>
  <tr>
    <th>Trail name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Role</th>
    <th>Sash</th>
    <th>Person avatar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.trail_name %></td>
    <td><%= person.age %></td>
    <td><%= person.gender_id %></td>
    <td><%= person.role_id %></td>
    <td><%= person.sash_id %></td>
    <td><%= person.person_avatar_id %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

