<div class="span3">
  <div class="well sidebar-nav">
      <ul class="nav nav-list">
        <li class="nav-header"><%= @person.email %></li>
        <li>Recent Adventures</li>
        <%= link_to "New Adventure", new_adventure_url %>
        <% @person.family.adventures.each do |adventure| %>
        <li><%= link_to adventure.name, adventure %></li>
        <% end %>
      </ul>
  </div><!--/.well -->
</div>
<div class="wrapper">
<%= link_to 'Edit', edit_person_path(@person) %> <%= link_to 'Back', people_path %>
<p id="notice"><%= notice %></p>

<p>
  <b>Email: <%= @person.email %></b>
</p>

<p>
  <b>Trail name: <%= @person.trail_name %></b>
</p>

<p>
  <b>Tribe: <%= @person.family.tribe_name %></b>
</p>

<p>
  <b>Age: <%= @person.age %></b>
</p>

