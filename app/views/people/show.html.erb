<div class="span3">
  <div class="well sidebar-nav">
  <h3>Recent Adventures</h3>
      <ul class="nav nav-list">
        <li class="nav-header"><%= @person.email %></li>
        <%= link_to "New Adventure", new_adventure_url %>
        <% @person.family.adventures.each do |adventure| %>
        <li><%= link_to adventure.name, adventure %></li>
        <% end %>
      </ul>
  </div><!--/.well -->
  <div class="well sidebar-nav">
  <h3>Path to Outdoor Enlightenment</h3>
  <h4>recent adventures</h4>
    <ul class="nav nav-list">
      <%= link_to "New Adventure", new_adventure_url %>
      <% @person.family.adventures.each do |adventure| %>
      <li><%= link_to adventure.name, adventure %></li>
      <% end %>
    </ul>
  </div><!--/.well -->
</div>
<div class="wrapper">
      <ul class="nav nav-list">
        <li><b>Progress towards enlightenment</li>
       <% if @adventures !=nil %>
         <% @adventures.each do |adventure| %>
           <li><%= adventure.activity.name %></li>
           <li><%= adventure.activity.goal.name %></li>
           <% end %>
       <% else %>
       <% end %>
       <br>
       <li><b>Left to do:</b>

      <% @zippy.each do |t| %>
        <li><%= t %></li>
        <% end %>

      </ul>
</div>
<div class="wrapper">
<%= link_to 'Edit', edit_person_path(@person) %>
<p id="notice"><%= notice %></p>

<p>
  <b>Email: <%= @person.email %></b>
</p>

<p>
  <b>Trail name: <%= @person.trail_name %></b>
</p>

<p>
  <b>Tribe: <%= @person.family.tribe_name %></b>
</p>

<p>
  <b>Age: <%= @person.age %></b>
</p>

  <h1>UPCOMING ADVENTURES</h1>
  <div class="find-adventures">
    <form action="<%=person_url(@person.id)%>">
        <input type="text" class="search-query span5" placeholder="search for an activity" name="activity">   <input type="text" class="search-query span5" placeholder="search by age" name="age"> <%= submit_tag "Search Now" %>

    </form>
  </div>
        <% if @filtered_activities != nil %>
            <% @filtered_activities.each do |activity| %>
            <p><%= activity.name %></p>
                <% activity.adventures.each do |adventure|%>
              <p><%= adventure.name %></p>
                    <% adventure.reviews.each do |review| %>
                     <%= review.person.age  %>
                     <%= review.good  %>
                     <%= review.bad  %>
                     <% end %>



                <% end %>
            <% end %>
          <% end %>
  <div class="blog">
    <h1>BLOG POSTS</h1>
    <%= link_to 'Create Blog Post', new_personal_blog_url %>
    <% @person.personal_blogs.each do |b| %>
    <li><%= link_to b.blog, b %></li>
    <% end %>
  </div>
  <div class="review">
    <h1>REVIEWS</h1>
    <%= link_to 'Create Review', new_review_url %>
    <% @person.reviews.each do |rev| %>
    <li><%= link_to rev.good, rev %></li>
    <% end %>
  </div>
</div>
</div>
