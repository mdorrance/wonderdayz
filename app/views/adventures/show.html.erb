<div class="wrapper">
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @adventure.name %>
</p>

<p>
  <b>Activity:</b>
  <%= @adventure.activity.name %>
</p>

<p>
  <b>Cost:</b>
  <%= @adventure.activity.cost %>
</p>

<p>
  <b>Location:</b>
  <%= @adventure.activity.address %> <%= @adventure.activity.city %> <%= @adventure.activity.state %> <%= @adventure.activity.zipcode %>
</p>

<p>
  <b>Family:</b>
  <%= @adventure.person.family.tribe_name %>
</p>

<p>
  <h2>Personal Reviews:</h2>
  <% @reviews.each do |review| %>
  <br><b>Name:</b> <%= review.person.trail_name %>
  <br><b>GOOD:</b> <%= review.good %>
  <br><b>BAD:</b> <%= review.bad %>
  <br>
  <% end %>
</p>

<p>
  <h2>Family Reviews:</h2>

  <% @reviews.each do |review| %>
  <br><b>Name:</b> <%= review.person.trail_name %>
  <br><b>GOOD:</b> <%= review.good %>
  <br><b>BAD:</b> <%= review.bad %>
  <br>
  <% end %>
</p>




<p>
  <b>Tips:</b>
  <%= @adventure.tips %>
</p>


<%= link_to 'Edit', edit_adventure_path(@adventure) %> |
<%= link_to 'Back', adventures_path %>
</div>
